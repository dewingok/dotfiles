# -*- mode: sh; -*-
# vim: ft=sh
# .zsh/aliases

if command -v brew; then
    BREW_PATH="$(brew --prefix)/bin"
fi

# sudo - now with aliases!
alias sudo="sudo "

# Rust tools
[ -f ${BREW_PATH}/bat ] && alias cat="bat" 
[ -f ${BREW_PATH}/fd ] && alias find="fd"

# ls aliases
if [ -f ${BREW_PATH}/exa ]; then
    alias ls="exa"
else
    [ $MACOS ] && alias ls="ls -G"
    [ $LINUX ] && alias ls="ls --color"
fi
alias ll="ls -lh"

# Colorize grep output - switch to rg?
alias grep="grep --color"

alias hist="history 0 | grep"
alias tokenz="source ~/.bin/aws_session_token"

# CyberArk break/fix 
if command -v CyberArkEPM; then
    alias fixca="sudo chown ${USER}:admin /usr/local/bin"
    alias getoffmylawn="sudo kill -9 $(pgrep CyberArk)"
fi